<verb>
    <name>Yer</name>
    <parent>Er</parent>
	<summary>The y turns into an i before an a or o.</summary>
    <infinitive>
        <suffix>yer</suffix>
    </infinitive>

    <rule>
        <tense>present</tense>
        <tense>future</tense>
        <tense>historic</tense>
    	<stem>
            <all>-3</all>
        </stem>
    </rule>

    <rule>
        <tense>present</tense>
        <infix>
            <subj1>i</subj1>
			<subj2>y</subj2>
        </infix>
    </rule>

    <rule>
        <tense>historic</tense>
        <infix>
            <all>y<parent /></all>
        </infix>
    </rule>

    <rule>
        <tense>future</tense>
        <infix>
            <all>i<parent /></all>
        </infix>
    </rule>

</verb>